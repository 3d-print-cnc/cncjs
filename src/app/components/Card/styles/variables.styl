$white = #fff;
$black = #000;

$border-width = 1px;
$border-radius = .25rem;

$card-spacing-y = .75rem;
$card-spacing-x = 1.25rem;
$card-border-width = $border-width;
$card-border-radius = $border-radius;
$card-border-color = rgba($black, .125);
$card-inner-border-radius = "calc(%s - %s)" % ($card-border-radius $card-border-width);
$card-cap-bg = rgba($black, .05);
$card-cap-hover-bg = rgba($black, .075);
$card-cap-color = inherit;
$card-color = inherit;
$card-bg = $white;

$card-group-margin = 0;
$card-deck-margin = $card-group-margin;
